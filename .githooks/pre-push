#!/bin/bash

# Git pre-push hook for lastplace.nvim
# Runs comprehensive checks before pushing

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}ðŸš€ Running pre-push checks...${NC}"

# Check if we have any commits to push
if git diff --quiet HEAD @{u} 2>/dev/null; then
    echo -e "${YELLOW}â„¹ï¸  No new commits to push${NC}"
    exit 0
fi

# Run comprehensive checks
echo -e "${YELLOW}ðŸ“‹ Running full test suite...${NC}"

if make check >/dev/null 2>&1; then
    echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"
    echo -e "${CYAN}ðŸš€ Ready to push${NC}"
else
    echo -e "${RED}ðŸš« Pre-push checks failed${NC}"
    echo -e "${YELLOW}ðŸ’¡ Run 'make check' to see detailed errors${NC}"
    exit 1
fi
